<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/id_btn_main_membership"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_membership"
        android:background=""
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PK멤버십"
        app:layout_constraintStart_toStartOf="@id/id_btn_main_membership"
        app:layout_constraintEnd_toEndOf="@id/id_btn_main_membership"
        app:layout_constraintTop_toBottomOf="@id/id_btn_main_membership"/>

    <ImageButton
        android:id="@+id/id_btn_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu"
        android:background=""
        android:scaleType="fitCenter"
        android:layout_marginStart="36dp"
        app:layout_constraintStart_toEndOf="@id/id_btn_main_membership"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메뉴"
        app:layout_constraintStart_toStartOf="@id/id_btn_main_menu"
        app:layout_constraintEnd_toEndOf="@id/id_btn_main_menu"
        app:layout_constraintTop_toBottomOf="@id/id_btn_main_menu"/>

    <ImageButton
        android:id="@+id/id_btn_main_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_coupon"
        android:background=""
        android:scaleType="fitCenter"
        android:layout_marginStart="36dp"
        app:layout_constraintStart_toEndOf="@id/id_btn_main_menu"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쿠폰"
        app:layout_constraintStart_toStartOf="@id/id_btn_main_coupon"
        app:layout_constraintEnd_toEndOf="@id/id_btn_main_coupon"
        app:layout_constraintTop_toBottomOf="@id/id_btn_main_coupon"/>


</androidx.constraintlayout.widget.ConstraintLayout>